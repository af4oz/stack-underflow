{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "graphql.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "prisma/seed.ts"
  ],
  "exclude": ["node_modules", ".cache"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
